<% provide(:title, "search_result") %>
<div class="container">
    <div class="row">
        <h1><strong>検索結果</strong></h1>
        <% if @results.present? %>
        <table class="table table-bordered table-hover table-inverse">
            <thead>
                <tr>
                    <th>陳列番号</th>
                    <th>カテゴリー名</th>
                    <th>在庫名</th>
                    <th>在庫の説明</th>
                    <th>価格</th>
                    <th>数量</th>
                </tr>
            </thead>

            <tbody>
            <% @results.each do |stock| %>
                <tr>
                    <td><%= stock.display_number %></td>
                    <td><%= stock.category_name %></td>
                    <td><%= stock.stock_name %></td>
                    <td><%= stock.stock_description %></td>
                    <td>￥<%= stock.price %></td>
                    <td><%= stock.quantity %></td>
                    <td><%= link_to "編集", edit_search_result_user_stock_path(stock), remote: true, class: "btn btn-primary" %></td>
                    <td><%= link_to "削除", destroy_search_result_user_stock_path(stock), method: :delete, data: { confirm: "削除してもよろしいですか？" }, class: "btn btn-danger" %></td>
                </tr>
            <% end %>
            </tbody>
        </table>
        <% else %>
            <p>該当する在庫が見つかりませんでした。</p>
        <% end %>
    </div>
</div>
<!--モーダルウインドウ表示-->
<div id="edit-search-result" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>